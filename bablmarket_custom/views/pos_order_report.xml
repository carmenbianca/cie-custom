<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_report_pos_order_search" model="ir.ui.view">
        <field name="name">report.pos.order.search</field>
        <field name="model">report.pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_report_pos_order_search"/>
        <field name="arch" type="xml">
            <filter name="product_category" position="after">
                <filter string="Customer" name="partner_id" context="{'group_by':'partner_id'}"/>
                <filter string="Customer Email" name="email" context="{'group_by':'email'}"/>
                <filter string="Customer Formatted Email (Name + Email)" name="email_formatted" context="{'group_by':'email_formatted'}"/>
            </filter>
        </field>
    </record>
</odoo>
